<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <form action="@Url.RouteUrl("GroupLocalizedDefault", new { controller = "process", action = "addrole"})" method="POST" id="form-add-role" novalidate>
                    <div class="row clearfix form-validation">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="role-name" class="required">Role Name</label>
                                <input type="text" name="@Html.NameFor(m => m.Name)" class="form-control" id="role-name" required maxtextlength="50">

                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="role-description">Description</label>
                                <textarea name="@Html.NameFor(m => m.Description)" class="form-control" id="role-description" rows="7"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <button class="btn btn-primary-theme waves-effect" id="btn-add-role" type="submit" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Creating...">Create</button>
                            <a href="@Url.RouteUrl("GroupControlLocalizedDefault",new { controller = "process" ,action = "showstep", groupslug = group.groupSlug, groupid = group.Id, processid = Model.Id })" class="btn btn-default waves-effect" type="button">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section CustomScripts{
    <script>
        $(function () {
            var form = $(".form-validation").formValidation();
            var checkName = false;
            $("#form-add-role").on("submit", function () {
                var isHaveError = form.validates();
                if (isHaveError) {
                    showToastr("error", "Error!!");
                    return false;
                }
                if (!checkName) {
                    var container = $("#role-name");
                    form.setFormError(container, "This name is exist in process");
                    return false;
                }
                var buttonaction = $("#btn-add-role");
                toggleLoading(buttonaction);
                setTimeout(function () {
                    toggleLoading(buttonaction);
                    return true;
                }, 2000);
            });
            $("#role-name").on("blur", function () {
                var rolename = $(this).val().trim();
                checkRoleExist(@Model.Id,rolename);
            })
            function checkRoleExist(processid, rolename) {
                $.ajax({
                    url: "@Url.Action("checkroleexist", "process", new { area ="api"})",
                    type: "POST",
                    data: { processid: processid, rolename: rolename },
                    dataType: "json",
                    success: function (response) {
                        //thanh cong thi no tra du lieu ve
                        var container = $("#role-name");
                        if (response.isExist) {
                            form.setFormError(container, "This name is exist in process");
                            checkName = false;
                        }
                        else {
                            checkName = true;
                            form.removeFormError(container);
                        }

                    }
                })
            }
        })
        
    </script>
}
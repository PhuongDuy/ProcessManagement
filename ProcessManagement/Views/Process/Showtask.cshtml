@model ProcessManagement.Models.TaskProcess
@{
    ViewBag.Title = "Showtask";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var requinputfile = ViewData["requinputfile"];
    var requinputtext = ViewData["requinputtext"];
    var size = ViewData["size"];
    var maxlenght = ViewData["maxlenght"];
    var inputtext = ViewData["inputtext"];

}

@section CustomCss{
    <link rel="stylesheet" href="~/Content/vendor/dropify/css/dropify.min.css">
    <link rel="stylesheet" href="~/Content/vendor/select2/select2.css" />
    <link rel="stylesheet" href="~/Content/vendor/switchery/dist/switchery.min.css" />
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h2>
                <a href="javascript:void(0);" class="btn btn-xs btn-link theme-color btn-toggle-fullwidth">
                    <i class="fa fa-arrow-left"></i>
                </a> @Model.Name
            </h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index" class="theme-color"><i class="icon-home"></i></a></li>
                <li class="breadcrumb-item"><a href="~/Group/Index">Groups</a></li>
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("GroupControlLocalizedDefault", new { controller = "group", action = "Show", groupid = Model.Step.Process.Group.Id })">@Model.Step.Process.Group.Name</a></li>
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("GroupControlLocalizedDefault", new { controller = "process", action = "ShowStep", processid = Model.Step.Process.Id })">@Model.Step.Process.Name</a></li>
                <li class="breadcrumb-item"><a href="">@Model.Step.Name</a></li>
                <li class="breadcrumb-item"><a href="">@Model.Name</a></li>
            </ul>
        </div>
        <div class="col-lg-6 col-md-4 col-sm-12 text-right">
            <div class="bh_chart hidden-xs">
                <div class="float-left m-r-15">
                    <small>Visitors</small>
                    <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                </div>
                <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
            </div>
            <div class="bh_chart hidden-sm">
                <div class="float-left m-r-15">
                    <small>Visits</small>
                    <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                </div>
                <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
            </div>
            <div class="bh_chart hidden-sm">
                <div class="float-left m-r-15">
                    <small>Chats</small>
                    <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                </div>
                <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <form @*action="@Url.RouteUrl(" GroupLocalizedDefault",new { controller="process" , action="addtaskprocess" })"*@ method="post" id="addnewtask" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <input disabled required id="name" type="text" class="form-control" placeholder="Task name*" value="@Html.DisplayFor(m => m.Name)">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <select id="selectrole" class="form-control show-tick ms select2" data-placeholder="Select Role*" disabled>
                                <option>@Html.DisplayFor(m => m.Role.Name)</option>
                            </select>
                        </div>
                        @*<div class="col-sm-4">
                                @Html.DropDownList("idRole", new SelectList(ViewBag.Listrole, "Id", "Name", Model.Role), new { @class = "form-control show-tick ms select2" })
                                @Html.ValidationMessageFor(model => model.idRole, "", new { @class = "text-danger" })
                            </div>*@
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <textarea disabled class="form-control" rows="8" placeholder="Write something about your group (optional)" id="editor">@Html.DisplayFor(m => m.Description)</textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 ">
                            <div class="choose-type">
                                <div class="choose-item hide row" id="choose-input">
                                    <div class="col-sm-12 input-title">Input Text</div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <input disabled id="inputtext" type="text" class="form-control" placeholder="Label*" value="@inputtext">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <input disabled id="maxlength" type="number" class="form-control" placeholder="max-length*" value="@maxlenght">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group switch-custom">
                                            <label>required: <input disabled id="requinputtext" name="requinputtext" type="checkbox" class="checkbox-switch" /></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="choose-item hide row" id="choose-file">
                                    <div class="col-sm-12 input-title">
                                        Input File
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input disabled id="size" type="number" class="form-control" placeholder="Size(Mb)*" value="@size">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group switch-custom">
                                            <label>required: <input disabled id="requinputfile" name="requinputfile" type="checkbox" class="checkbox-switch" /></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mt-2">
                                <a href="@Url.RouteUrl("GroupControlLocalizedDefault", new { controller = "process", action = "EditTask", idtask = Model.id })" class="btn btn-primary-theme">Edit task</a>
                                <a href="@Url.RouteUrl("GroupControlLocalizedDefault",new { controller = "Process", action = "DeleteTask", idtask = Model.id })" onclick="return confirm('bạn muốn xóa task này không?')" class="btn btn-primary-theme">Delete task</a>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section CustomScripts{
    <script src="~/Content/vendor/dropify/js/dropify.min.js"></script>
    <script src="~/Content/build/js/pages/forms/dropify.js"></script>
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <script src="~/Content/vendor/switchery/dist/switchery.min.js"></script>
    <script>
        $(function () {
            createSwitch();
            createSelect2();
        })
        function createSwitch() {
            let el = $('.checkbox-switch');
            let switchArr = [];
            el.each(function (index, e) {
                switchArr[index] = new Switchery(e, {
                    size: 'small',
                });
            })
        }
        function createSelect2() {
            $("select.select2").select2({
                allowClear: true
            });

        }
        if (@requinputtext == true) {
            $("#requinputtext").attr('checked', true);
        }
        if (@requinputfile == true) {
            $("#requinputfile").attr('checked', true);
        }
        
    </script>
}
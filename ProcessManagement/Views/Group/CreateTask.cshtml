@model ProcessManagement.Models.Group
@{
    ViewBag.Title = "New Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomCss{
    <link rel="stylesheet" href="~/Content/vendor/dropify/css/dropify.min.css">
    <link rel="stylesheet" href="~/Content/vendor/select2/select2.css" />
    <link rel="stylesheet" href="~/Content/vendor/switchery/dist/switchery.min.css"/>
}
<div class="block-header">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Create New Task</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index-2.html"><i class="icon-home"></i></a></li>
                <li class="breadcrumb-item">Projects</li>
                <li class="breadcrumb-item active">Add Task</li>
            </ul>
        </div>
        <div class="col-lg-6 col-md-4 col-sm-12 text-right">
            <div class="bh_chart hidden-xs">
                <div class="float-left m-r-15">
                    <small>Visitors</small>
                    <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                </div>
                <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
            </div>
            <div class="bh_chart hidden-sm">
                <div class="float-left m-r-15">
                    <small>Visits</small>
                    <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                </div>
                <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
            </div>
            <div class="bh_chart hidden-sm">
                <div class="float-left m-r-15">
                    <small>Chats</small>
                    <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                </div>
                <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="body">
                <form action="@Url.RouteUrl("GroupLocalizedDefault",new { controller = "Group", action = "NewGroup"})" method="post" id="addnewtask" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Task name*">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <select class="form-control show-tick ms select2" data-placeholder="Select">
                                <option></option>
                                <option>Designer</option>
                                <option>Coder</option>
                                <option>Tester</option>
                            </select>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <textarea class="form-control" rows="8" placeholder="Write something about your group (optional)" id="editor"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 ">
                            <label class="fancy-radio"><input type="radio" name="input" value="input" checked /><span><i></i>input text</span></label>
                            <label class="fancy-radio"><input type="radio" name="input" value="file" /><span><i></i>input file</span></label>
                        </div>
                        <div class="col-sm-12 ">
                            <div class="choose-type row">
                                <div class="choose-input">
                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Label*">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="value">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="min-length*">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="max-length*">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group switch-custom">
                                            <label>required: <input type="checkbox" class="checkbox-switch" /></label>
                                            <label>readonly: <input type="checkbox" class="checkbox-switch" /></label>
                                            <label>disabled: <input type="checkbox" class="checkbox-switch" /></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="choose-file">
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Size(Mb)*">
                                        </div>
                                    </div>
                                    <div class="col-sm-10">
                                        <select class="form-control show-tick ms select2" multiple data-placeholder="Select">
                                            <option></option>
                                            <option>.jpg</option>
                                            <option>.pdf</option>
                                            <option>.doc</option>
                                            <option>audio/*</option>
                                            <option>video/* </option>
                                            <option>image/*</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary-theme">Create</button>
                                <button type="reset" class="btn btn-outline-secondary">Reset</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section CustomScripts{
    <script src="~/Content/vendor/dropify/js/dropify.min.js"></script>
    <script src="~/Content/build/js/pages/forms/dropify.js"></script>
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <script src="~/Content/vendor/switchery/dist/switchery.min.js"></script>
    <script>
        $(function () {
            var inputConfig = $(".choose-type .choose-input").html();
            var fileConfig = $(".choose-type .choose-file").html();
            $(".choose-type").empty().html(inputConfig);
            $("input[name='input']").on("click", function () {
                var choose = $(this).val();
                if (choose == "input") {
                    $(".choose-type").empty().html(inputConfig);
                    createSwitch();
                } else {
                    $(".choose-type").empty().html(fileConfig);
                    createSelect2();
                }
            })
            createSelect2();
            createSwitch();
        });
        function createSwitch() {
            let el = $('.checkbox-switch');
            let switchArr = [];
            el.each(function (index, e) {
                switchArr[index] = new Switchery(e, {
                    size: 'small',
                });
            })
        }
        function createSelect2() {
            $("select.select2").select2({
                allowClear: true
            });
           
        }
    </script>

}


@{
    var comments = ViewData["comments"] as List<ProcessManagement.Models.Comment>;
}
@if (comments.Any())
{
    <div class="comments">
        @foreach (var comment in comments)
        {
            JObject javatar = JObject.Parse(comment.AspNetUser.AvatarDefault);
            <div class="comment">
                <div class="comment-avatar" style="background:@javatar["background"]">@javatar["name"]</div>
                <div class="comment-box">
                    <div class="comment-text">@comment.Content</div>
                    <div class="comment-footer">
                        <div class="comment-info">
                            <span class="comment-author">
                                <a href="#">@comment.AspNetUser.UserName</a>
                            </span>

                            <span class="comment-date">@comment.Create_At.ToLongDateString() @@ @comment.Create_At.ToShortTimeString()</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}